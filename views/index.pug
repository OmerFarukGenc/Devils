extend main-layout.pug

block content
    #carouselExampleControls.carousel.slide(data-bs-ride='carousel')
        .carousel-inner
            .carousel-item.active
                img.d-block.w-100.h-50(src='/devils1.jpg' alt='...')
            .carousel-item
                img.d-block.w-100.h-50(src='/devils2.jpg' alt='...')
            .carousel-item
                img.d-block.w-100.h-50(src='/devils3.jpg' alt='...')
        button.carousel-control-prev(type='button' data-bs-target='#carouselExampleControls' data-bs-slide='prev')
            span.carousel-control-prev-icon(aria-hidden='true')
            span.visually-hidden Previous
        button.carousel-control-next(type='button' data-bs-target='#carouselExampleControls' data-bs-slide='next')
            span.carousel-control-next-icon(aria-hidden='true')
            span.visually-hidden Next

    hr

    .container-fluid
        .row
            .col-md.m-0.border-end
                p index page
            .col-md-4.m-0.d-none.d-sm-block
                include mixins/twitterTimeline.pug